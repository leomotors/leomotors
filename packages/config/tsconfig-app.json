{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // fuck graphql-codegen
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "importHelpers": true
  }
}
